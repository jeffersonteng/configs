set rnu
set expandtab
set tabstop=4
set shiftwidth=4
set autoindent
set nostartofline
set smartindent
set wildmode=longest,list



set cursorline
nmap - <C-w>5<
nmap + <C-w>5>

inoremap jj <ESC>

highlight ColorColumn ctermbg=black

imap <C-h> <left>
imap <C-l> <right>
imap <C-j> <down>
imap <C-k> <up>

inoremap <C-e> <C-O>_

set incsearch
set hlsearch
set ignorecase
set smartcase
